<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrincipal</item>
        <item name="colorPrimaryDark">@color/colorNegro</item>
        <item name="colorAccent">@color/colorFondoBlanco</item>
    </style>

    <style name="style_author">
        <item name="android:gravity">center</item>
        <item name="android:text">@string/author</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

</resources>
